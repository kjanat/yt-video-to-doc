{
	"name": "yt-video-to-txt",
	"version": "0.1.0",
	"description": "YouTube video to document converter",
	"author": "Kaj Kowalski",
	"license": "MIT",
	"main": "dist/index.js",
	"scripts": {
		"build": "tsc",
		"dev": "tsx src/cli.ts",
		"start": "node dist/cli.js",
		"lint": "biome check",
		"lint:fix": "biome check --write",
		"lint:summary": "biome check --reporter=summary",
		"format": "biome format --write",
		"format:check": "biome format",
		"test": "vitest run",
		"test:ui": "vitest --ui",
		"test:watch": "vitest watch",
		"test:coverage": "vitest --coverage",
		"typecheck": "tsc --noEmit",
		"ci:lint:github": "biome ci --reporter=github",
		"ci:lint:junit": "biome ci --reporter=junit",
		"prepare": "husky"
	},
	"keywords": [
		"youtube",
		"video",
		"ocr",
		"document",
		"converter"
	],
	"engines": {
		"node": ">=20.0.0 <25.0.0",
		"pnpm": ">=10.0.0"
	},
	"engineStrict": true,
	"dependencies": {
		"@ffmpeg-installer/ffmpeg": "^1.1.0",
		"@ffprobe-installer/ffprobe": "^2.1.2",
		"@jimp/diff": "^1.6.0",
		"chalk": "^5.4.1",
		"commander": "^14.0.0",
		"dotenv": "^17.2.0",
		"jimp": "^1.6.0",
		"node-tesseract-ocr": "^2.2.1",
		"ora": "^8.2.0",
		"p-limit": "^6.2.0",
		"uuid": "^11.1.0",
		"winston": "^3.17.0",
		"zod": "^4.0.5"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.1.1",
		"@commitlint/cli": "^19.8.1",
		"@commitlint/config-conventional": "^19.8.1",
		"@jimp/types": "^1.6.0",
		"@types/node": "^24.0.14",
		"@types/uuid": "^10.0.0",
		"@vitest/coverage-v8": "^3.2.4",
		"@vitest/ui": "^3.2.4",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.2",
		"tsx": "^4.20.3",
		"typescript": "^5.8.3",
		"vitest": "^3.2.4"
	}
}
